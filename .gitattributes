# =========================================
# Global line ending normalization
# =========================================
# Auto-detect text files and normalize to LF in the repo
* text=auto eol=lf

# Keep binary files untouched
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.mp4  binary
*.zip  binary
*.jar  binary
*.apk  binary
*.aab  binary
*.db   binary

# =========================================
# Flutter / Dart
# =========================================
*.dart     text eol=lf
*.yaml     text eol=lf
*.arb      text eol=lf
*.flutter-plugins-dependencies text eol=lf

# =========================================
# Java / Kotlin / Android
# =========================================
*.java     text eol=lf
*.kt       text eol=lf
*.gradle   text eol=lf
*.xml      text eol=lf
*.properties text eol=lf
*.md       text eol=lf
*.pro      text eol=lf
*.aidl     text eol=lf
*.manifest text eol=lf

# =========================================
# Python (AI / FastAPI / Flask backend)
# =========================================
*.py       text eol=lf
*.sh       text eol=lf
requirements.txt text eol=lf

# =========================================
# Configuration / Web assets
# =========================================
*.json     text eol=lf
*.html     text eol=lf
*.css      text eol=lf
*.js       text eol=lf
*.ts       text eol=lf
*.vue      text eol=lf
*.env      text eol=lf
*.conf     text eol=lf

# =========================================
# Windows-specific scripts
# =========================================
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# =========================================
# Lock / dependency / merge handling
# =========================================
*.lock merge=union
package-lock.json merge=union
pubspec.lock merge=union
poetry.lock merge=union
yarn.lock merge=union

# =========================================
# Miscellaneous safe defaults
# =========================================
*.txt      text eol=lf
*.csv      text eol=lf
*.ini      text eol=lf
